rule obj
  command=emcc -c $in -o $out
rule app
  command=emcc -s FULL_ES2=1  $in -o $out --preload-file assets/vs.glsl --preload-file assets/fs.glsl
  description=emcc -s FULL_ES2=1  $in -o $out --preload-file assets/vs.glsl --preload-file assets/fs.glsl

subninja glmatrix/build.ninja
build main.o: obj main.c
build main.html: app main.o glmatrix/glmatrix.o
