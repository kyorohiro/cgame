#
# Wins
# cmd = cmd /c

# Mac
# cmd =
sep = /
cmd =
objExt= o
appExt= exe
objLib = a
cc = cc
ar = ar
rule obj
  command=${cmd} ${cc} -c $in -o $out -I.. -I.
rule test
  command=${cmd} ${cc} $in -o $out
rule lib
  command=${cmd} ${ar} rcs $out $in
rule exe
  command=${cmd} ${cc}  $in -o $out

subninja core${sep}build.ninja
