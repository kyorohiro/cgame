#
# Wins
# cmd = cmd /c

# Mac
# cmd =
sep = /
cmd =
objExt= o
appExt= exe
objLib = a
cc = cc
ar = ar
rule obj
  command=${cmd} ${cc} -c $in -o $out -I.. -I. -DPLATFORM_OSX 
rule test
  command=${cmd} ${cc} $in -o $out -DPLATFORM_OSX
rule lib
  command=${cmd} ${ar} rcs $out $in -DPLATFORM_OSX
rule exe
  command=${cmd} ${cc}  $in -o $out -DPLATFORM_OSX

subninja core${sep}build.ninja
